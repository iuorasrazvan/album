


<?php if ( $this->pageCount ) : ?>
<div> 

	<ul class="pagination">   
	
<?php	if (isset($this->previous)):  ?>
	<li>
		<a href="<?php echo $this->url ('album-page', ['page'=>$this->previous]); ?>">&lt;&lt;</a>
	</li>


<?php else:  ?>
	<li class="disabled"><a>&lt;&lt;</a></li>
	
